\RequirePackage{xifthen}

\newcommand{\peaks}[1]{%
	\ifthenelse{\equal{#1}{thr}}{\texttt{"thr"}}{%
	\ifthenelse{\equal{#1}{th}}{\texttt{"th-"}}{%
	\ifthenelse{\equal{#1}{hr}}{\texttt{"-hr"}}{%
	\ifthenelse{\equal{#1}{tr}}{\texttt{"t-r"}}{%
	\ifthenelse{\equal{#1}{t}}{\texttt{"t--"}}{%
	\ifthenelse{\equal{#1}{h}}{\texttt{"-h-"}}{%
	\ifthenelse{\equal{#1}{r}}{\texttt{"--r"}}{%
		\typeout{! Illegal argument for peaks: "#1"}%
	}}}}}}}%
}

\endinput
